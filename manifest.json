{
    "manifest_version": 2,
    
    "name": "WebActivity ",
      
    "description": "Tracks Your Web Activity in Browser",
      
    "version": "1.0",
      
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },
    
    "options_page": "options.html",

    "permissions":[
        "tabs",
        "activeTab",
        "storage",
        "idle",
        "chrome://favicon/*",
        "webNavigation",
        "unlimitedStorage",
        "notifications"
    ],
    "background": {
        "scripts":[
                    "background.js",
                    "tabs.js",
                    "functions.js"
                ],
        "persistent": false
    },
    "browser_action":{
        "default_popup": "popup.html",
        "default_title": "Web Activity Time Tracker",
        "default_icon": "icon48.png"
    }
}